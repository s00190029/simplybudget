<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvCatName2"
        android:layout_width="58dp"
        android:layout_height="25dp"
        android:elevation="100dp"
        android:text="Bills"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/btnCat2"
        app:layout_constraintEnd_toStartOf="@+id/proBarCat2"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/btnCat2"
        app:layout_constraintTop_toTopOf="@+id/btnCat2"
        app:layout_constraintVertical_bias="0.172" />

    <Button
        android:id="@+id/btnCat2"
        android:layout_width="368dp"
        android:layout_height="135dp"
        android:layout_marginTop="28dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCat" />

    <ProgressBar
        android:id="@+id/proBarCat2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="12dp"
        android:elevation="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnCat2"
        app:layout_constraintEnd_toEndOf="@+id/btnCat2" />

    <TextView
        android:id="@+id/tvCatCash2"
        android:layout_width="98dp"
        android:layout_height="34dp"
        android:elevation="100dp"
        android:text="€30.00"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/proBarCat2"
        app:layout_constraintEnd_toEndOf="@+id/btnCat2"
        app:layout_constraintHorizontal_bias="0.781"
        app:layout_constraintStart_toEndOf="@+id/tvCatName2"
        app:layout_constraintTop_toTopOf="@+id/btnCat2" />

    <TextView
        android:id="@+id/tvCatCash"
        android:layout_width="98dp"
        android:layout_height="34dp"
        android:layout_marginEnd="40dp"
        android:elevation="100dp"
        android:text="€30.00"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/btnCat"
        app:layout_constraintEnd_toEndOf="@+id/btnCat"
        app:layout_constraintTop_toTopOf="@+id/btnCat"
        app:layout_constraintVertical_bias="0.158" />


    <Button
        android:id="@+id/btnCashDisplay"
        android:layout_width="232dp"
        android:layout_height="54dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="156dp"
        android:background="@drawable/rounded_corners_button"
        android:onClick="DoLumSumInput"
        android:text="Cash €0.00"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTutorial"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="307dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/tutorial_button"
        android:text="?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCatName"
        android:layout_width="58dp"
        android:layout_height="25dp"
        android:layout_marginStart="28dp"
        android:elevation="100dp"
        android:text="Food"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/btnCat"
        app:layout_constraintStart_toStartOf="@+id/btnCat"
        app:layout_constraintTop_toTopOf="@+id/btnCat"
        app:layout_constraintVertical_bias="0.145" />

    <Button
        android:id="@+id/btnCat"
        android:layout_width="368dp"
        android:layout_height="135dp"
        android:layout_marginTop="44dp"
        android:background="#FFFFFF"
        android:onClick="doExpandedCat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCashDisplay" />

    <ProgressBar
        android:id="@+id/proBarCat"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:elevation="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnCat"
        app:layout_constraintEnd_toEndOf="@+id/btnCat"
        app:layout_constraintHorizontal_bias="0.671"
        app:layout_constraintStart_toStartOf="@+id/btnCat"
        app:layout_constraintTop_toBottomOf="@+id/tvCatCash"
        app:layout_constraintVertical_bias="0.457" />

</androidx.constraintlayout.widget.ConstraintLayout>
