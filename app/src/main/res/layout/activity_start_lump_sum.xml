<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sandandsky"
    tools:context=".StartLumpSumActivity">

    <Button
        android:id="@+id/btnLumpSumSpend"
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:background="@drawable/red_button"
        android:onClick="doSpend"
        android:text="SPEND"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnLumpSumSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnLumpSumSave"
        app:layout_constraintTop_toTopOf="@+id/btnLumpSumSave" />

    <EditText
        android:id="@+id/etLumpSumInput"
        android:layout_width="307dp"
        android:layout_height="57dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.329" />

    <Button
        android:id="@+id/btnLumpSumSave"
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:background="@drawable/green_button"
        android:onClick="doInvest"
        android:text="Invest"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLumpSumInput"
        app:layout_constraintVertical_bias="0.126" />

    <TextView
        android:id="@+id/tvLumpSumLabel"
        android:layout_width="351dp"
        android:layout_height="48dp"
        android:fontFamily="@font/abeezee_italic"
        android:text="Enter € Amount"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/etLumpSumInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.685" />

    <TextView
        android:id="@+id/tvLumpSumEuroLabel"
        android:layout_width="30dp"
        android:layout_height="53dp"
        android:text="€"
        android:textColor="#000000"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/etLumpSumInput"
        app:layout_constraintEnd_toStartOf="@+id/etLumpSumInput"
        app:layout_constraintTop_toTopOf="@+id/etLumpSumInput"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>